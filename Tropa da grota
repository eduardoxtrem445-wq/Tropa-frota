<script>
  // Criar partículas de faísca
  for(let i=0;i<50;i++){
    let spark=document.createElement('div');
    spark.className='spark';
    spark.style.left=Math.random()*100+'%';
    spark.style.top=Math.random()*100+'%';
    spark.style.animationDuration=(2+Math.random()*3)+'s';
    document.body.appendChild(spark);
  }

  // Criar prédios da cidade
  for(let i=0;i<20;i++){
    let building=document.createElement('div');
    building.className='building';
    building.style.left=(i*50)+'px';
    building.style.height=(100+Math.random()*200)+'px';
    document.querySelector('.city-background').appendChild(building);
  }

  // Som ambiente noturno
  const audio=new Audio('https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3');
  audio.loop=true;
  audio.volume=0.1;
  // audio.play(); // descomente para ativar o som automaticamente
</script>

